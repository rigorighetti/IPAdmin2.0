[% META 
   title='Department'
   use_table=1
   section='Asset'
-%]
<div id="tabs">	 
  <ul>
    <li><a href="#tabs-1">General</a></li>
    <li><a href="#tabs-2">Buildings</a></li>
  </ul>
  		

  <div id="tabs-1">
    <table id="info">
      <tr>
	<td>Name:</td><td>[% object.name %]</td>
      </tr>
      <tr>
	<td>Description:</td><td>[% object.description | html %] </td>
      <tr>
	<td>Notes:</td><td>[% object.notes | html%]</td>
      </tr>
    </table>
    [% add_css_tableinfo -%]
    <p>
      <div class="buttons">	
	<a href=[%c.uri_for_action('department/edit', [object.id]) %]> [% ui_icon('pencil') %] Edit</a>
	&nbsp;<a href=[% c.uri_for_action('department/delete', [object.id]) %]>
	[% ui_icon('closethick') %]  Delete</a>
      </div>
    </p>
  [% add_css_tableinfo %]
  </div>
  
  <div id="tabs-2">	
    [% FOREACH b IN object.buildings %]
    [% IF loop.first %]
    [% init_table('build_list') %]
    <table class="display" id="build_list">
      <thead>  
        <tr>
 	  <th>Name</th>
 	  <th>Description</th>
	  <th>Address</th>
        </tr>
      </thead>  
      <tbody>
	[% END %]
        <tr>
 	  <td><a href=[% c.uri_for_action('/building/view', [b.id]) %]>[% b.name %]</a></td>
 	  <td>[% b.description %]</td>
          <td>[% b.address %]</td>
	</tr>
	[% IF loop.last %]
      </tbody>
    </table>
    [% END %]
    [% END %]
  </div>
</div>


