[% META 
   title='Area'
   use_table=1
   section='Asset'
-%]
<div id="tabs">	 
  <ul>
    <li><a href="#tabs-1">Informazioni</a></li>
    <li><a href="#tabs-2">Dipartmenti</a></li>
  </ul>
  		

  <div id="tabs-1">
    <table id="info">
      <tr>
	<td>Edificio:</td><td>[% object.building.name %]</td>
      </tr>
      <tr>
	<td>Dipartmento:</td><td>[% object.department.name | html %] </td>
      <tr>
	<td>Referente:</td><td>[% object.manager.fullname | html%]</td>
      </tr>
    </table>
    [% add_css_tableinfo -%]
    <p>
      <div class="buttons">	
	<a href=[%c.uri_for_action('area/edit', [object.id]) %]> [% ui_icon('pencil') %] Modifica</a>
	&nbsp;<a href=[% c.uri_for_action('area/delete', [object.id]) %]>
	[% ui_icon('closethick') %]  Elimina</a>
	&nbsp; 
<!--
	<a href="[% c.uri_for('/area/create', object.id,{backref=>c.req.uri}) %]">
		[% ui_icon('plusthick') %] Aggiungi Area</a> 
-->
      </div>
    </p>
  [% add_css_tableinfo %]
  </div>
 
  <div id="tabs-2">	
    [% FOREACH d IN object.departments %]
    [% IF loop.first %]
    [% init_table('dep_list') %]
    <table class="display" id="dep_list">
      <thead>  
        <tr>
 	  <th>Name</th>
 	  <th>Description</th>
        </tr>
      </thead>  
      <tbody>
	[% END %]
        <tr>
 	  <td><a href=[% c.uri_for_action('/department/view', [d.id]) %]>[% d.name %]</a></td>
 	  <td>d.description</td>
        </tr>
	[% IF loop.last %]
      </tbody>
    </table>
    [% END %]
    [% END %]
  </div>

</div>


